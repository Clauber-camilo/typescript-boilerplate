{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "paths": {
      "@config/*": ["src/config/*"]
    }
  }
}
